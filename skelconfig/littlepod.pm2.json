{
  "apps" : [{
    // minecraft
    "name"        : "minecraft",
    "script"      : "minecraft-ctl.sh",
    "args"        : "start",
    "cron_restart": "0 12 * * *",
    "kill_timeout": "60000",
    "cwd"         : "/minecraft",
    "error_file"  : "/minecraft/host/otherdata/logs/err.log",
    "out_file"    : "/minecraft/host/otherdata/logs/out.log"
  },{
    // discord
    "name"        : "minecraft-discord",
    "script"      : "minecraft-discord.py",
    "args"        : "",
    "exec_interpreter" : "python3",
    "cwd"         : "/minecraft",
    "error_file"  : "/minecraft/host/otherdata/logs/err.log",
    "out_file"    : "/minecraft/host/otherdata/logs/out.log",
    "env": {
      "PYTHONUNBUFFERED": "yes",
   } 
  },{
    // web server
    "name"       : "minecraft-twistd",
    "script"     : "minecraft-twistd.sh",
    "cwd"         : "/minecraft",
    "error_file"  : "/minecraft/host/otherdata/logs/err.log",
    "out_file"    : "/minecraft/host/otherdata/logs/out.log",
    "env": {
      "PYTHONUNBUFFERED": "yes",
    }
  },{
    // notify
    "name"       : "minecraft-notify",
    "script"     : "minecraft-notify.py",
    "exec_interpreter" : "python3",
    "cwd"         : "/minecraft",
    "error_file"  : "/minecraft/host/otherdata/logs/err.log",
    "out_file"    : "/minecraft/host/otherdata/logs/out.log",
    "env": {
      "PYTHONUNBUFFERED": "yes",
    }
  },{
 // player activity
    "name"       : "minecraft-playeractivity",
    "script"     : "minecraft-playeractivity.py",
    "exec_interpreter" : "python3",
    "cwd"         : "/minecraft",
    "error_file"  : "/minecraft/host/otherdata/logs/err.log",
    "out_file"    : "/minecraft/host/otherdata/logs/out.log",
    "env": {
      "PYTHONUNBUFFERED": "yes",
}
  }]
}
